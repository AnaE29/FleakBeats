<div data-controller="dropdown" class="box-home">
  <button id="dropdownHoverButton"
    class="text-white border border-white bg-transparent hover:bg-white-600 hover:text-black focus:ring-4 focus:outline-none focus:ring-white-300 font-medium rounded-lg text-lg px-5 py-2.5 text-center inline-flex items-center dark:hover:bg-white dark:focus:ring-white "
    type="button"
    data-action="mouseover->dropdown#show mouseleave->dropdown#hide">
    <i class="fa-solid fa-headphones "></i>
  </button>

  <div id="dropdownHover"
    class="z-9 hidden bg-white divide-y divide-gray-100 rounded-lg shadow-sm w-48 dark:bg-gray-700 absolute drop-shadow-[2px_2px_6px_rgb(55,255,0)] top-14 left-[12px]"
    data-action="mouseenter->dropdown#show mouseleave->dropdown#hide">

    <div data-controller="dropdown" class="p-3 w-48">
      <label for="input-group-search" class="sr-only">Search</label>
      <div class="relative">
        <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
          <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
          </svg>
        </div>

        <input id="input-group-search" type="search" class="block w-full p-2 ps-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50"
          placeholder="Film ou une série" data-action="keyup->dropdown#filter"/>

<!--
        <%= simple_form_for :search, url: root_path, method: :get, html: { class: "relative" } do |f| %>

          <%= f.input :query, label: false, placeholder: "Film ou une série",
                      class: "block w-full p-2 ps-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50",
                      data: { action: "keyup->dropdown#teste" } %>

          <%= f.submit "Rechercher", class: "hidden" %>
        <% end %>
        -->
        <div data-dropdown-target="results" class="autocomplete-results absolute z-10 bg-white shadow-md"></div>
      </div>
    </div>

    <% if user_signed_in? %>
    <div data-controller="dropdown" class="tset">
      <button id="dropdownHoverButton"
        class="flex justify-between w-full text-white bg-white-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-white-300 font-medium rounded-lg text-lg px-5 py-2.5 text-center items-center dark:bg-white-600 dark:hover:bg-white-700 dark:focus:ring-white-800"
        type="button"
        data-action="mouseover->dropdown#show mouseleave->dropdown#hide">
          <span>Favoris </span>
        <i class="fa-solid fa-caret-down ml-2"></i>
      </button>
    <% end %>

    <div id="dropdownHover"
      class="z-10 hidden bg-white divide-y divide-gray-100 rounded-lg shadow-sm w-48 dark:bg-gray-700"
      data-action="mouseenter->dropdown#show mouseleave->dropdown#hide">

      <% if user_signed_in? %>
        <%= turbo_stream_from "favorites_#{current_user.id}" %>
        <% unless @favorites.empty? %>
          <div id="favorites">
            <%= render "shared/favorites", favorites: @favorites %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>


  </div>
</div>
